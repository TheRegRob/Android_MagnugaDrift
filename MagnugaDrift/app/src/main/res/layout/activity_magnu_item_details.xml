<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_ItemImage"
            android:layout_width="0dp"
            android:layout_height="106dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/general_border"
            app:layout_constraintEnd_toStartOf="@+id/tv_Price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/tv_Ingredients"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_Aggiunte"
            app:layout_constraintEnd_toStartOf="@+id/tv_Aggiunte"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_Aggiunte" />

        <TextView
            android:id="@+id/tv_FoodFamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="193dp"
            android:text="TextView"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="@+id/tv_FoodFamily"
            app:layout_constraintTop_toBottomOf="@+id/tv_FoodFamily" />

        <EditText
            android:id="@+id/et_Notes"
            android:layout_width="0dp"
            android:layout_height="116dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="75dp"
            android:background="@drawable/general_border"
            android:ems="10"
            android:gravity="top"
            android:hint="Note sul piatto"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lv_Ingredients" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="256dp"
            android:background="@drawable/general_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lv_Ingredients" />

        <TextView
            android:id="@+id/tv_Aggiunte"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="308dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_Ingredients"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_Note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/et_Notes"
            app:layout_constraintStart_toStartOf="parent" />

        <ListView
            android:id="@+id/lv_Ingredients"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/general_border"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerView2"
            app:layout_constraintEnd_toStartOf="@+id/recyclerView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recyclerView2" />

        <TextView
            android:id="@+id/tv_Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:text="TextView"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_FoodFamily"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_FoodFamily" />

        <TextView
            android:id="@+id/tv_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="23dp"
            android:text="TextView"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_Type"
            app:layout_constraintStart_toEndOf="@+id/iv_ItemImage"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

        <TextView
            android:id="@+id/tv_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="44dp"
            android:text="TextView"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_Price"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_ItemImage" />

        <Button
            android:id="@+id/bt_AddToOrder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="53dp"
            android:background="@drawable/roundedbg"
            android:drawableLeft="@drawable/ic_add"
            android:gravity="center"
            android:text="Aggiungi all'ordine"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_Notes" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>