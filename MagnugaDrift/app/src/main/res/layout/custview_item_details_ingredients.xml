<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ingredients_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edges_item_ingredients"
        android:textColor="@color/lst_header_text"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Ingredienti">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lv_ingredients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"
        android:scrollbarSize="3dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:background="@drawable/rounded_edges_listview"
        tools:listitem="@layout/lstview_item_ingredients">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>