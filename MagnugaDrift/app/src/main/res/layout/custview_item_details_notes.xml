<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ingredients_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edges_item_notes_header"
        android:textColor="@color/lst_header_text"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Note">
    </TextView>

<EditText
    android:id="@+id/et_Notes"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:overScrollMode="always"
    android:scrollbarStyle="insideInset"
    android:scrollbars="vertical"
    android:textStyle="bold"
    android:fontFamily="cursive"
    android:textSize="30sp"
    android:gravity="top|left"
    android:paddingTop="15dp"
    android:paddingStart="15dp"
    android:paddingBottom="10dp"
    android:text="_NOTE_CONTENT_"
    android:background="@drawable/rounded_edges_item_notes_body">
</EditText>
</LinearLayout>